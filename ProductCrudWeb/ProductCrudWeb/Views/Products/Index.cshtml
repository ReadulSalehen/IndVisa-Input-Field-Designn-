@model IEnumerable<ProductCrudWeb.Models.Product>
@{
    ViewData["Title"] = "Index";
}


<a class="btn btn-primary" asp-controller="Products" asp-action="Create">Add Visa</a>
<table class="table">
    <thead>
        <tr>
            <th>SL#</th>
            <th>Country</th>
            <th>Indian Mission/Office</th>
            <th>Nationality/Region</th>
            <th>Date of Birth</th>
            <th>Email ID</th>
            <th>Expected Date Of Arivel</th>
            <th>Visa Type</th>
            <th>Purpose</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            foreach(Product product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Country</td>
                    <td>@product.IndianMissionOffice</td>
                    <td>@product.Nationality</td>
                    <td>@product.DateofBirth</td>
                    <td>@product.Email</td>
                    <td>@product.ExpectedDateOfArivel</td>
                    <td>@product.VisaType</td>
                    <td>@product.Purpose</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Products" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-controller="Products" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>
