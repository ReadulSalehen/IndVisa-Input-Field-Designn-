@model ProductCrudWeb.Models.Product
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-controller="Products" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="md-3">
        <label for="txtCountry" class="form-label">Country/Region you are applying visa from<sup>*</sup></label>
        <input type="text" class="form-control" id="txtCountry" asp-for="Country" />
    </div>
    <div class="md-3">
        <label for="txtIndianMissionOffice" class="form-label">Indian Mission/Office<sup>*</sup></label>
        <input type="text" class="form-control" id="txtIndianMissionOffice" asp-for="IndianMissionOffice" />
    </div>
    <div class="md-3">
        <label for="txtNationality" class="form-label">Nationality/Region<sup>*</sup></label>
        <input type="text" class="form-control" id="txtNationality" asp-for="Nationality" />
    </div>
    <div class="md-3">
        <label for="txtDateofBirth" class="form-label">Date of Birth<sup>*</sup></label>
        <input type="date" class="form-control" id="txtDateofBirth" asp-for="DateofBirth" />
    </div>
    <div class="md-3">
        <label for="txtEmailID" class="form-label">Email ID<sup>*</sup></label>
        <input type="email" class="form-control" id="txtEmailID" asp-for="Email" />
    </div>
    <div class="md-3">
        <label for="txtVisaType" class="form-label">Visa Type<sup>*</sup></label>
        <input type="text" class="form-control" id="txtVisaType" asp-for="VisaType" />
    </div>

    <div class="md-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

