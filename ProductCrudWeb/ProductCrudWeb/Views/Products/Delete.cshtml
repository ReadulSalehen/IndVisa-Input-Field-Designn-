@model ProductCrudWeb.Models.Product
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<form asp-action="Delete" asp-controller="Products" method="post">
    <input type="hidden" asp-for="Id" />
    <h3>Are you sure, You want to delete this record?</h3>
    <table>
        <tr>
            <th>Country/Region you are applying visa from</th>

            <th>@Model.Country</th>
        </tr>
        <tr>
            <th>Indian Mission/Office</th>

            <th>@Model.IndianMissionOffice</th>
        </tr>
        <tr>
            <th>Nationality/Region</th>

            <th>@Model.Nationality</th>
        </tr>
        <tr>
            <th>Date of Birth</th>

            <th>@Model.DateofBirth</th>
        </tr>
        <tr>
            <th>Email ID</th>

            <th>@Model.Email</th>
        </tr>
        <tr>
            <th>Visa Type</th>

            <th>@Model.VisaType</th>
        </tr>
    </table>

    <a asp-action="Index" asp-controller="Products" class="btn btn-outline-danger">Back</a>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>


